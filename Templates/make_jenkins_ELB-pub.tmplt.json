{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Template for creating a public ELB for users to connect through which to connect to the Jenkins service.",
  "Metadata": {},
  "Outputs": {
    "JenkinsElbFqdn": {
      "Description": "Jenkins front-end's IP address",
      "Export": {
        "Name" : { "Fn::Sub": "${AWS::StackName}-ElbDnsName" }
      },
      "Value": { "Fn::GetAtt": [ "JenkinsPubElb", "DNSName" ] }
    }
  },
  "Parameters": {
    "JenkinsAgentPort": {
      "Description": "TCP Port number that the Jenkins agent-hosts connect through.",
      "MaxValue": "65535",
      "MinValue": "1025",
      "Type": "Number"
    },
    "JenkinsListnerCert": {
      "Default": "",
      "Description": "Name of ACM-managed SSL Certificate to protect public listener.",
      "Type": "String"
    },
    "JenkinsListenPort": {
      "Default": "443",
      "Description": "TCP Port number that the Jenkins ELB forwards from.",
      "MaxValue": "65535",
      "MinValue": "1",
      "Type": "Number"
    },
    "JenkinsServicePort": {
      "Default": "8080",
      "Description": "TCP Port number that the Jenkins host forwards to.",
      "MaxValue": "65535",
      "MinValue": "1025",
      "Type": "Number"
    },
    "HaSubnets": {
      "Description": "Select three subnets - each from different Availability Zones.",
      "Type": "List<AWS::EC2::Subnet::Id>"
    },
    "JenkinsInstanceId": {
      "Description": "Name of stack containing instance this template should create a proxy for.",
      "Type": "String"
    },
    "ProxyPrettyName": {
      "Description": "A short, human-friendly label to assign to the ELB (no capital letters).",
      "Type": "String"
    },
    "SecurityGroupIds": {
      "Description": "List of security groups to apply to the instance(s)",
      "Type": "List<AWS::EC2::SecurityGroup::Id>"
    }
  },
  "Resources": {
    "JenkinsPubElb": {
      "Metadata": {},
      "Properties": {
        "CrossZone": "true",
        "HealthCheck": {
          "HealthyThreshold": "5",
          "Interval": "30",
          "Target": {
            "Fn::Join": [
              "",
              [
                "HTTP:",
                { "Ref": "JenkinsServicePort" },
                "/login"
              ]
            ]
          },
          "Timeout": "5",
          "UnhealthyThreshold": "2"
        },
        "Instances": [ { "Ref": "JenkinsInstanceId" } ],
        "Listeners": [
          {
            "InstancePort": { "Ref": "JenkinsAgentPort" },
            "InstanceProtocol": "TCP",
            "LoadBalancerPort": { "Ref": "JenkinsAgentPort" },
            "Protocol": "TCP"
          },
          {
            "InstancePort": { "Ref": "JenkinsServicePort" },
            "InstanceProtocol": "HTTP",
            "LoadBalancerPort": { "Ref": "JenkinsListenPort" },
            "Protocol": "HTTPS",
            "SSLCertificateId": {
              "Fn::Join": [
                ":",
                [
                  "arn:aws:acm",
                  { "Ref" : "AWS::Region" },
                  { "Ref" : "AWS::AccountId" },
                  { "Fn::Join": [
                      "",
                      [
                        "certificate/",
                        { "Ref": "JenkinsListnerCert" }
                      ]
                    ]
                  }
                ]
              ]
            }
          }
        ],
        "LoadBalancerName": { "Ref": "ProxyPrettyName" },
        "Scheme": "internet-facing",
        "SecurityGroups": { "Ref": "SecurityGroupIds" },
        "Subnets": { "Ref": "HaSubnets" },
        "Tags": [
          {
            "Key": "Name",
            "Value": "Jenkins front-end ELB"
          }
        ]
      },
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer"
    }
  }
}
